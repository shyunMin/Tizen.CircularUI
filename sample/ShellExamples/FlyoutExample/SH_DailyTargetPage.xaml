<?xml version="1.0" encoding="utf-8" ?>
<w:CirclePage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:c="clr-namespace:FlyoutExample;assembly=FlyoutExample"
             xmlns:w="clr-namespace:Tizen.Wearable.CircularUI.Forms;assembly=Tizen.Wearable.CircularUI.Forms"
             xmlns:tizen="clr-namespace:Xamarin.Forms.PlatformConfiguration.TizenSpecific;assembly=Xamarin.Forms.Core"
             x:Class="FlyoutExample.DailyTargetPage"
             RotaryFocusObject="{x:Reference stepper}" >
    <w:CirclePage.Content>
        <AbsoluteLayout
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand">
            <Label x:Name="titleLabel"
                   HorizontalTextAlignment="Center"
                   AbsoluteLayout.LayoutBounds=".5, 51, 210, 40"
                   AbsoluteLayout.LayoutFlags="XProportional" >
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Title"
                              TextColor="Aqua"
                              FontAttributes="Bold"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <c:CustomStepper x:Name="stepper"
                             AbsoluteLayout.LayoutBounds=".5, 81, 210, 151"
                             AbsoluteLayout.LayoutFlags="XProportional" 
                             Activated="OnActivated"
                             Deactivated="OnDeactivated"/>
            <Label x:Name="unitButton"
                   BackgroundColor="Transparent"
                   HorizontalTextAlignment="Center"
                   AbsoluteLayout.LayoutBounds=".5, 195, 100, 100"
                   AbsoluteLayout.LayoutFlags="XProportional">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="unit"
                              FontSize="10" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <c:ContentButton x:Name="button"
                             AbsoluteLayout.LayoutBounds=".5, 268, 210, 72"
                             AbsoluteLayout.LayoutFlags="XProportional"
                             Pressed="OnButtonPressed"
                             Released="OnButtonReleased"
                             Clicked="OnButtonClicked">
                <c:ContentButton.Content>
                    <AbsoluteLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                        <Image x:Name="buttonBg"
                               Source="w_13_0_daily_activity_bg.png"
                               Opacity="0.5"
                               Aspect="AspectFit"
                               tizen:Image.BlendColor="Aqua" 
                               AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                               AbsoluteLayout.LayoutFlags="SizeProportional" />
                        <Label x:Name="buttonText"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                               AbsoluteLayout.LayoutFlags="SizeProportional">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Done"
                                          FontSize="12" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </AbsoluteLayout>
                </c:ContentButton.Content>
            </c:ContentButton>
        </AbsoluteLayout>
    </w:CirclePage.Content>
</w:CirclePage>