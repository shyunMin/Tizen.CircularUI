<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:w="clr-namespace:Tizen.Wearable.CircularUI.Forms;assembly=Tizen.Wearable.CircularUI.Forms"
             xmlns:local="clr-namespace:FlyoutExample" x:Class="FlyoutExample.AppShell">
    <ShellItem Route="Main" Title="{Binding MainTitle, Mode=OneWay}" Icon="home.png">
        <ShellContent Route="content" Title="Main" ContentTemplate="{DataTemplate local:SimplePage}"/>
    </ShellItem>
    <ShellItem Route="AAASimplePage" Title="AAASimplePage" Icon="play.png">
        <ShellContent Route="AAASimplePage" ContentTemplate="{DataTemplate local:AAASimplePage}"/>
    </ShellItem>
    <ShellItem Route="CircleTimePickerTest" Title="CircleTimePickerTest" Icon="play.png">
        <ShellContent Route="CircleTimePickerTest" ContentTemplate="{DataTemplate local:CircleTimePickerTest}"/>
    </ShellItem>
    <ShellItem Route="TimePickerTest" Title="TimePickerTest" Icon="play.png">
        <ShellContent Route="TimePickerTest" ContentTemplate="{DataTemplate local:TimePickerTest}"/>
    </ShellItem>
    <ShellItem Route="CircleDatePickerTest" Title="CircleDatePickerTest" Icon="play.png">
        <ShellContent Route="CircleDatePickerTest" ContentTemplate="{DataTemplate local:CircleDatePickerTest}"/>
    </ShellItem>
    <ShellItem Route="DatePickerTest" Title="DatePickerTest" Icon="play.png">
        <ShellContent Route="DatePickerTest" ContentTemplate="{DataTemplate local:DatePickerTest}"/>
    </ShellItem>
    <ShellItem Route="ScrollViewTest" Title="ScrollViewTest" Icon="play.png">
        <ShellContent Route="ScrollViewTest" ContentTemplate="{DataTemplate local:ScrollViewTest}"/>
    </ShellItem>
    <ShellItem Route="CircleStepperTest" Title="CircleStepperTest" Icon="play.png">
        <ShellContent Route="CircleStepperTest" ContentTemplate="{DataTemplate local:CircleStepperTest}"/>
    </ShellItem>
    <ShellItem Route="ScrollerTestPage" Title="ScrollerTestPage" Icon="play.png">
        <ShellContent Route="ScrollerTestPage" ContentTemplate="{DataTemplate local:ScrollerTestPage}"/>
    </ShellItem>
    <ShellItem Route="StepperTest" Title="StepperTest" Icon="play.png">
        <ShellContent Route="StepperTest" ContentTemplate="{DataTemplate local:StepperTest}"/>
    </ShellItem>
    <ShellItem Route="Config" Title="Config" Icon="play.png">
        <ShellContent Route="content" ContentTemplate="{DataTemplate local:ConfigPage}"/>
    </ShellItem>
    <ShellItem Route="Level0" FlyoutDisplayOptions="AsMultipleItems">
        <ShellSection Route="Level1-1" Title="Level1-1" Icon="favorite.png">
            <ShellContent Route="Level2" ContentTemplate="{DataTemplate local:SimplePage}"/>
        </ShellSection>
        <ShellSection Route="Level1-2" Title="Level1-2" FlyoutDisplayOptions="AsMultipleItems">
            <ShellContent Route="Level2-0" Title="Level2-0" Icon="work.png" ContentTemplate="{DataTemplate local:RandomColorPage}"/>
            <ShellContent Route="Level2-1" Title="Level2-1" Icon="play.png" ContentTemplate="{DataTemplate local:RandomColorPage}"/>
            <ShellContent Route="Level2-2" Title="Level2-2" Icon="inbox.png" ContentTemplate="{DataTemplate local:RandomColorPage}"/>
            <ShellContent Route="Level2-3" Title="Level2-3" Icon="work.png" ContentTemplate="{DataTemplate local:RandomColorPage}"/>
            <ShellContent Route="Level2-4" Title="Level2-4" Icon="play.png" ContentTemplate="{DataTemplate local:RandomColorPage}"/>
            <ShellContent Route="Level2-5" Title="Level2-5" Icon="inbox.png" ContentTemplate="{DataTemplate local:RandomColorPage}"/>
            <ShellContent Route="Level2-6" Title="Level2-6" Icon="inbox.png">
                <ContentPage>
                    <StackLayout>
                        <Button Text="Click"/>
                    </StackLayout>
                </ContentPage>
            </ShellContent>
        </ShellSection>
        <ShellContent Route="Level1-3" Title="Level1-3" ContentTemplate="{DataTemplate local:SimplePage}"/>
    </ShellItem>
    <MenuItem Text="Menu1" Command="{Binding OnMenu1}"/>
    <MenuItem Text="Menu2" Command="{Binding OnMenu2}"/>
</Shell>